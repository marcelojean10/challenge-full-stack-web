swagger: '2.0'
info:
  title: Grupo A - Students
  description: 'Test realized for full stack developer job.'
  version: '1.0'
produces:
  - application/json
paths:
  /students:
    get:
      summary: List all students.
      tags:
        - /students
      description: 'this route should be able list all students'
  /student/ra:
    get:
      summary: Find student by RA.
      tags:
        - /student/ra
      description: 'this route should be able find a student by RA.'  
  /student/ra:
    put:
      summary: Updated a student by RA.
      tags:
        - /student/ra
      description: 'this route should be able updated a student by RA.'    
  /student/ra:
    delete:
      summary: Delete student by RA.
      tags:
        - /student/ra
      description: 'this route should be able delete a student by RA.'    
                         